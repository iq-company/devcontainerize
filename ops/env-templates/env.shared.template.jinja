# =============================================================================
# SHARED ENVIRONMENT CONFIGURATION
# =============================================================================
# This file contains defaults shared across ALL stages.
# Stage-specific .env.STAGE files can override any value here.
#
# Load order: .env (this file) â†’ .env.STAGE (overrides)
# =============================================================================

# --- Docker Image Settings ---
IQ_IMAGE={{ image_prefix }}-dev
IQ_IMAGE_TAG=latest

# --- Site Settings ---
IQ_SITE_NAME={{ site_name }}
IQ_BRAND_NAME={{ project_name }}

# --- Redis Settings (service names) ---
REDIS_CACHE=redis-cache:6379
REDIS_QUEUE=redis-queue:6379
SOCKETIO_PORT=9000

# --- General Settings ---
SHELL=/bin/bash
CLIENT_MAX_BODY_SIZE=50m
FRAPPE_STREAM_LOGGING=1

# --- Compose Profiles ---
# Activate optional services defined with "profiles: [...]" in compose files.
# Multiple profiles: COMPOSE_PROFILES=ocr,monitoring
# See: https://docs.docker.com/compose/profiles/
# COMPOSE_PROFILES=

# --- Exposed Ports (can be overridden per stage to avoid conflicts) ---
WEBDB_PORT=22071
NGINX_PORT=8010
